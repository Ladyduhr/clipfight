generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String   @id @default(cuid())
  name     String?
  email    String?  @unique
// Hashed password for credential based login
password       String?
// Twitch user ID and username when linked
twitchId       String?  @unique
twitchUsername String?
  events   Event[]
  clips    Clip[]
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  clips       Clip[]
}

model Clip {
  id       String  @id @default(cuid())
  url      String
  approved Boolean @default(false)
  event    Event   @relation(fields: [eventId], references: [id])
  eventId  String
  user     User    @relation(fields: [userId], references: [id])
  userId   String
}
